<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/lusy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"></RelativeLayout>
        <EditText
            android:hint="Username"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="250dp"
            android:layout_height="80dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"></RelativeLayout>
        <EditText
            android:hint="Password"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="250dp"
            android:layout_height="80dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_home_activity"
            android:layout_gravity="center"
            android:text="MASUK"
            android:layout_width="100dp"
            android:layout_height="wrap_content"></Button>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"></RelativeLayout>
        <TextView
            android:hint="Belum punya akun? Silahkan registrasi disini"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
